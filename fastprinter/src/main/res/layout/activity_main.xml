<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_updata"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_text_bg_red"
            android:gravity="center"
            android:text="App检查更新"
            android:textColor="#ffffffff"
            android:textSize="15sp" />

        <Button
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="搜索并连接蓝牙"></Button>

        <TextView
            android:id="@+id/tv_con"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shape_text_bg_red"
            android:gravity="center"
            android:text="打印机已连接"
            android:textColor="#ffffffff"
            android:textSize="15sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_template1"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shape_text_bg_red"
            android:gravity="center"
            android:text="打印模版1"
            android:textColor="#ffffffff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_template2"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="72dp"
            android:background="@drawable/shape_text_bg_red"
            android:gravity="center"
            android:text="打印模版2"
            android:textColor="#ffffffff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_updateapp"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="72dp"
            android:background="@drawable/shape_text_bg_red"
            android:gravity="center"
            android:text="打印模版2"
            android:textColor="#ffffffff"
            android:textSize="15sp" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>